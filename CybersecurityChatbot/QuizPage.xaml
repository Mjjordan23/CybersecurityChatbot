<Page x:Class="CybersecurityChatbot.QuizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quiz">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Background="{StaticResource AccentBrush}">
            <StackPanel>
                <TextBlock Text="🎯 Cybersecurity Knowledge Quiz" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White" TextAlignment="Center"/>
                <TextBlock Text="Test your knowledge and learn to stay safe online!" 
                           FontSize="14" Foreground="#FFF3E0" 
                           TextAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Quiz Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
            <StackPanel Name="QuizContentPanel"/>
        </ScrollViewer>
    </Grid>
</Page>
